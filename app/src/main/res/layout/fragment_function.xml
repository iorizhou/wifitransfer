<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/titlelayout"
        android:background="@color/netease_red"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#ffffffff"
            android:id="@+id/title"
            android:text="@string/app_name"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            />

    </RelativeLayout>
<com.google.android.gms.ads.AdView
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/top_banner_ad"
    android:layout_below="@+id/titlelayout"
    ads:adUnitId="ca-app-pub-4536670654281494/8674220650"
    ads:adSize="BANNER"
    >


</com.google.android.gms.ads.AdView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/top_banner_ad"
        android:layout_above="@+id/bottom_ad_layout"
        >
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/wanna_send"
        android:id="@+id/sendFile"
        android:textSize="16sp"
        android:background="@drawable/buttonstyle"
        android:textColor="@color/netease_white"
        android:onClick="sendFile"/>
    <Button
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/wanna_recv"
        android:layout_below="@+id/sendFile"
        android:layout_marginVertical="30dp"
        android:id="@+id/recFile"
        android:textSize="16sp"
        android:background="@drawable/buttonstyle"
        android:textColor="@color/netease_white"
        android:onClick="receiveFile"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="25dp"
        android:id="@+id/bottom_ad_layout"
        android:orientation="vertical"
        >
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_banner_ad1"
        android:layout_gravity="top"
        ads:adUnitId="ca-app-pub-4536670654281494/9279425546"
        ads:adSize="BANNER"
        />
    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_banner_ad2"
        android:layout_gravity="top"
        ads:adUnitId="ca-app-pub-4536670654281494/2111381967"
        ads:adSize="SMART_BANNER"
        />
    </LinearLayout>
</RelativeLayout>
